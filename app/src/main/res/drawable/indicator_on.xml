<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">

            <stroke
                android:width="15dp"
                android:color="@android:color/transparent"/>
            <solid
                android:color="#FFF"/>
            <size
                android:width="20dp"
                android:height="20dp"/>

        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">

            <stroke
                android:width="1dp"
                android:color="#6FFF"/>
            <size
                android:width="20dp"
                android:height="20dp"/>

        </shape>
    </item>

</layer-list>
