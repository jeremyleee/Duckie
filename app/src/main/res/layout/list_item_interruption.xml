<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/interruption_desc_textView"
        android:text="Interruption after 00 overs"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_button_min_height_material"/>

    <Button
        android:layout_marginRight="4dp"
        android:id="@+id/interruption_delete_button"
        android:layout_alignParentRight="true"
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginRight="4dp"
        android:id="@+id/interruption_edit_button"
        android:layout_toLeftOf="@id/interruption_delete_button"
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>