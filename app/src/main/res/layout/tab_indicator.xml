<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="#DE9F4B"
              android:paddingTop="24dp">

    <ImageView
        android:id="@+id/first_innings_indicator"
        android:src="@drawable/indicator_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="1dip"
        android:background="#6FFF"/>

    <ImageView
        android:id="@+id/second_innings_indicator"
        android:src="@drawable/indicator_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="1dip"
        android:background="#6FFF"/>

    <ImageView
        android:id="@+id/result_indicator"
        android:src="@drawable/indicator_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>